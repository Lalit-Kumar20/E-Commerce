<div id="navbar">
  <p  id="logo">Welcome, <%= user %> !</p>
  <div id="navbar-right">
    <a href="/exit" class="ex" id = "log">Logout</a>
  </div>
</div>


<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<div class="ttt">
  <p class = 'hh'>Select the items and click the buy Button on the bottom of the page.</p>

</div>


<div class = "posts">
<div class="hero">
  
  <form action='/tt' method="POST">
    
    <input type="hidden" name = 'val' value="<%= user %>+<%= pass %>">
    <% her.forEach(function(post){ %>
      <div class="main">
        <% if(!post.price){ %>
          <%  post.price = 0; %>
            <% } %>   
                        
            <div class = "title" >
         <p class = 'dd'>Name :-</p>    
         <p class='ee'><%= post.title %></p>
            </div>
            
            <div class = "checkbox" style="float: left;">
              
                <input id = 'x' class = "toggle"  type="checkbox" value="<%= post.title %>~<%= post.price %>~<%= user %>" name = "items">  
                <label for='x'></label>
                <div class = 'tap'>  Tap to select item</div>
           </div>
                   
          
            <div class = "image" style="float: left;">
              <img src="<%= post.imagename %>" alt="" width="500" height="500">
              
            </div>
                   
            <div class = "desc">
              
         <p class = 'dd'>Description :-</p>
              <p class="ee"><%= post.description %></1>
              
            </div>
                   
            <div class = "date">
              
              <p class = 'dd'>Date :-</p>
     
              <p class="ee"><%= post.date %></p>
              
            </div>
                   
            <div class = "price">
              <p class = 'dd'>Price:-</p>
     
              <p class="ee"><%= post.price %></p>
              
            </div>
            
            <% }) %>
       
      </div>
         <button id = "bot" class = "pass" type = 'submit'>Buy</button>
        </form> 
  

  </div> 
</div>
    